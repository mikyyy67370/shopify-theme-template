{% comment %}
  Hero Section - Balance Intelligente
  ------------------------------------------------------------------------------
  Section principale avec vidéo d'arrière-plan et proposition de valeur
{% endcomment %}

<div class="relative bg-gray-900 overflow-hidden">
  <!-- Video Background -->
  <div class="absolute inset-0">
    <video 
      class="w-full h-full object-cover"
      autoplay 
      loop 
      muted 
      playsinline
      poster="{{ section.settings.background_image | img_url: '1920x' }}"
    >
      {% if section.settings.background_video != blank %}
        <source src="{{ section.settings.background_video }}" type="video/mp4">
      {% endif %}
    </video>
    <div class="absolute inset-0 bg-gradient-to-r from-gray-900 to-gray-900/70"></div>
  </div>

  <div class="relative max-w-7xl mx-auto py-24 px-4 sm:py-32 sm:px-6 lg:px-8">
    <div class="max-w-3xl">
      <!-- Badge -->
      <div 
        class="inline-flex items-center px-4 py-2 rounded-full bg-accent/10 backdrop-blur-sm mb-8"
        data-aos="fade-down"
        data-aos-delay="200"
      >
        <div class="h-2 w-2 rounded-full bg-accent animate-pulse"></div>
        <span class="ml-3 text-sm font-medium text-accent">
          {{ section.settings.badge_text | default: "Nouvelle Génération" }}
        </span>
      </div>

      <!-- Main Title -->
      <h1 
        class="text-4xl font-bold tracking-tight text-white sm:text-5xl lg:text-6xl mb-6"
        data-aos="fade-right"
        data-aos-delay="400"
      >
        {{ section.settings.title | default: "La balance intelligente qui révolutionne votre suivi santé" }}
      </h1>

      <!-- Subtitle -->
      <p 
        class="text-xl text-gray-300 max-w-2xl mb-8"
        data-aos="fade-right"
        data-aos-delay="600"
      >
        {{ section.settings.subtitle | default: "Suivez votre composition corporelle avec une précision inégalée. Synchronisation automatique avec votre smartphone et conseils personnalisés." }}
      </p>

      <!-- CTA Buttons -->
      <div 
        class="flex flex-col sm:flex-row gap-4"
        data-aos="fade-up"
        data-aos-delay="800"
      >
        <a 
          href="{{ section.settings.primary_button_link | default: '/products/smart-scale' }}"
          class="btn btn-primary inline-flex items-center justify-center"
        >
          {{ section.settings.primary_button_text | default: "Découvrir le produit" }}
          <svg class="ml-2 -mr-1 w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </a>
        <a 
          href="{{ section.settings.secondary_button_link | default: '#features' }}"
          class="btn btn-secondary inline-flex items-center justify-center"
        >
          {{ section.settings.secondary_button_text | default: "En savoir plus" }}
        </a>
      </div>

      <!-- Key Features -->
      <div 
        class="mt-16 grid grid-cols-1 gap-6 sm:grid-cols-3 sm:gap-8"
        data-aos="fade-up"
        data-aos-delay="1000"
      >
        <!-- Feature 1 -->
        <div class="flex items-center space-x-3">
          {% render 'icon', icon: 'weight', class: 'icon-sm text-accent' %}
          <span class="text-sm font-medium text-white">Précision 0.1g</span>
        </div>
        
        <!-- Feature 2 -->
        <div class="flex items-center space-x-3">
          {% render 'icon', icon: 'sync', class: 'icon-sm text-accent' %}
          <span class="text-sm font-medium text-white">Sync automatique</span>
        </div>
        
        <!-- Feature 3 -->
        <div class="flex items-center space-x-3">
          {% render 'icon', icon: 'battery', class: 'icon-sm text-accent' %}
          <span class="text-sm font-medium text-white">Batterie 6 mois</span>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Hero Main",
  "settings": [
    {
      "type": "text",
      "id": "badge_text",
      "label": "Badge Text",
      "default": "Nouvelle Génération"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "La balance intelligente qui révolutionne votre suivi santé"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Suivez votre composition corporelle avec une précision inégalée. Synchronisation automatique avec votre smartphone et conseils personnalisés."
    },
    {
      "type": "text",
      "id": "primary_button_text",
      "label": "Primary Button Text",
      "default": "Découvrir le produit"
    },
    {
      "type": "url",
      "id": "primary_button_link",
      "label": "Primary Button Link"
    },
    {
      "type": "text",
      "id": "secondary_button_text",
      "label": "Secondary Button Text",
      "default": "En savoir plus"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Secondary Button Link"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "url",
      "id": "background_video",
      "label": "Background Video URL (MP4)"
    }
  ],
  "presets": [
    {
      "name": "Hero Main",
      "category": "Hero"
    }
  ]
}
{% endschema %}
