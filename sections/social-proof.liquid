{% comment %}
  Social Proof Section
  ------------------------------------------------------------------------------
  Display customer testimonials and reviews
{% endcomment %}

<div class="bg-gray-50">
  <div class="max-w-7xl mx-auto py-16 px-4 sm:py-24 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">{{ section.settings.title }}</h2>
      <p class="mt-4 text-lg text-gray-500">{{ section.settings.tagline }}</p>
    </div>

    <div class="grid grid-cols-1 gap-y-8 sm:grid-cols-2 lg:grid-cols-3 gap-x-8">
      {% for block in section.blocks %}
        {% if block.type == 'testimonial' %}
          <div class="bg-white p-6 rounded-lg shadow-sm">
            <div class="flex items-center mb-4">
              {% if block.settings.customer_image %}
                <img src="{{ block.settings.customer_image | img_url: '100x100', crop: 'center' }}"
                     alt="{{ block.settings.customer_name }}"
                     class="w-12 h-12 rounded-full">
              {% endif %}
              <div class="ml-4">
                <h4 class="text-lg font-medium text-gray-900">{{ block.settings.customer_name }}</h4>
                <div class="flex text-yellow-400">★★★★★</div>
              </div>
            </div>
            <p class="text-gray-600">{{ block.settings.testimonial }}</p>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Social proof",
  "tag": "section",
  "class": "social-proof-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Ce que nos clients disent"
    },
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline",
      "default": "Plus de 10,000 clients satisfaits nous font confiance"
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "Testimonial",
      "settings": [
        {
          "type": "image_picker",
          "id": "customer_image",
          "label": "Customer Image"
        },
        {
          "type": "text",
          "id": "customer_name",
          "label": "Customer Name",
          "default": "Sophie Martin"
        },
        {
          "type": "textarea",
          "id": "testimonial",
          "label": "Testimonial",
          "default": "Cette balance connectée a changé ma façon de suivre ma santé. L'application est intuitive et les mesures sont très précises."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Social proof"
    }
  ]
}
{% endschema %}
