{% comment %}
    Renders a breadcrumb navigation
    Accepts:
    - collection: {Object} Collection Liquid object (optional)
    - product: {Object} Product Liquid object (optional)
    - article: {Object} Article Liquid object (optional)
    - blog: {Object} Blog Liquid object (optional)
    - page: {Object} Page Liquid object (optional)
{% endcomment %}

<nav class="flex py-4" aria-label="Breadcrumb">
  <ol role="list" class="flex items-center space-x-2">
    <li>
      <div>
        <a href="{{ routes.root_url }}" class="text-gray-400 hover:text-gray-500">
          <svg class="flex-shrink-0 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z" />
          </svg>
          <span class="sr-only">Home</span>
        </a>
      </div>
    </li>

    {% if collection and collection.handle != 'all' %}
      <li>
        <div class="flex items-center">
          <svg class="flex-shrink-0 h-5 w-5 text-gray-300" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
            <path d="M5.555 17.776l8-16 .894.448-8 16-.894-.448z" />
          </svg>
          <a href="{{ collection.url }}" class="ml-2 text-sm font-medium text-gray-500 hover:text-gray-700">{{ collection.title }}</a>
        </div>
      </li>
    {% endif %}

    {% if product %}
      <li>
        <div class="flex items-center">
          <svg class="flex-shrink-0 h-5 w-5 text-gray-300" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
            <path d="M5.555 17.776l8-16 .894.448-8 16-.894-.448z" />
          </svg>
          <span class="ml-2 text-sm font-medium text-gray-500" aria-current="page">{{ product.title }}</span>
        </div>
      </li>
    {% endif %}

    {% if blog %}
      <li>
        <div class="flex items-center">
          <svg class="flex-shrink-0 h-5 w-5 text-gray-300" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
            <path d="M5.555 17.776l8-16 .894.448-8 16-.894-.448z" />
          </svg>
          <a href="{{ blog.url }}" class="ml-2 text-sm font-medium text-gray-500 hover:text-gray-700">{{ blog.title }}</a>
        </div>
      </li>
    {% endif %}

    {% if article %}
      <li>
        <div class="flex items-center">
          <svg class="flex-shrink-0 h-5 w-5 text-gray-300" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
            <path d="M5.555 17.776l8-16 .894.448-8 16-.894-.448z" />
          </svg>
          <span class="ml-2 text-sm font-medium text-gray-500" aria-current="page">{{ article.title }}</span>
        </div>
      </li>
    {% endif %}

    {% if page %}
      <li>
        <div class="flex items-center">
          <svg class="flex-shrink-0 h-5 w-5 text-gray-300" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
            <path d="M5.555 17.776l8-16 .894.448-8 16-.894-.448z" />
          </svg>
          <span class="ml-2 text-sm font-medium text-gray-500" aria-current="page">{{ page.title }}</span>
        </div>
      </li>
    {% endif %}
  </ol>
</nav>

<script>
  // Ajout d'une animation subtile au survol des liens
  document.addEventListener('DOMContentLoaded', function() {
    const breadcrumbLinks = document.querySelectorAll('nav[aria-label="Breadcrumb"] a');
    
    breadcrumbLinks.forEach(link => {
      link.style.transition = 'all 0.2s ease-in-out';
      
      link.addEventListener('mouseover', function() {
        this.style.transform = 'translateY(-1px)';
      });
      
      link.addEventListener('mouseout', function() {
        this.style.transform = 'translateY(0)';
      });
    });
  });
</script>