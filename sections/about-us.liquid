{% comment %}
  About Us Section
  ------------------------------------------------------------------------------
  Company presentation with animated content
{% endcomment %}

<div class="relative bg-white py-16 sm:py-24" x-data="{ isVisible: false }" x-intersect="isVisible = true">
  <div class="lg:mx-auto lg:grid lg:max-w-7xl lg:grid-cols-2 lg:items-start lg:gap-24 lg:px-8">
    <!-- Image Column -->
    <div class="relative sm:py-16 lg:py-0">
      <div class="relative mx-auto max-w-md px-4 sm:max-w-3xl sm:px-6 lg:max-w-none lg:px-0">
        <div 
          class="relative overflow-hidden rounded-2xl"
          x-show="isVisible"
          x-transition:enter="transition ease-out duration-1000"
          x-transition:enter-start="opacity-0 transform translate-x-8"
          x-transition:enter-end="opacity-100 transform translate-x-0"
        >
          <img
            class="w-full object-cover"
            src="https://images.unsplash.com/photo-1581093458791-9f3c3900df4b?auto=format&fit=crop&w=800&h=600"
            alt="Notre équipe au travail"
          >
          <div class="absolute inset-0 bg-gradient-to-r from-primary/30 to-transparent"></div>
        </div>
      </div>
    </div>

    <!-- Content Column -->
    <div class="relative mx-auto max-w-md px-4 sm:max-w-3xl sm:px-6 lg:px-0">
      <div class="pt-12 sm:pt-16 lg:pt-20">
        <h2 
          class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl opacity-0 transform -translate-y-4"
          x-show="isVisible"
          x-transition:enter="transition ease-out duration-1000 delay-300"
          x-transition:enter-start="opacity-0 transform -translate-y-4"
          x-transition:enter-end="opacity-100 transform translate-y-0"
        >
          {{ section.settings.title | default: "Notre Mission" }}
        </h2>
        <div 
          class="mt-6 space-y-6 text-gray-500"
          x-show="isVisible"
          x-transition:enter="transition ease-out duration-1000 delay-500"
          x-transition:enter-start="opacity-0 transform -translate-y-4"
          x-transition:enter-end="opacity-100 transform translate-y-0"
        >
          <p class="text-lg">
            {{ section.settings.description | default: "Nous croyons que chacun mérite d'avoir accès à des outils de santé connectés précis et faciles à utiliser. Notre balance intelligente combine technologie de pointe et design intuitif pour vous aider à atteindre vos objectifs de bien-être." }}
          </p>
        </div>

        <!-- Stats Grid -->
        <div 
          class="mt-10 grid grid-cols-2 gap-8 border-t border-gray-200 pt-10"
          x-show="isVisible"
          x-transition:enter="transition ease-out duration-1000 delay-700"
          x-transition:enter-start="opacity-0 transform -translate-y-4"
          x-transition:enter-end="opacity-100 transform translate-y-0"
        >
          <div>
            <p class="text-2xl font-bold text-primary">10K+</p>
            <p class="mt-1 text-base text-gray-500">Clients satisfaits</p>
          </div>
          <div>
            <p class="text-2xl font-bold text-primary">98%</p>
            <p class="mt-1 text-base text-gray-500">Taux de satisfaction</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "About Us",
  "tag": "section",
  "class": "about-us-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Notre Mission"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Nous croyons que chacun mérite d'avoir accès à des outils de santé connectés précis et faciles à utiliser. Notre balance intelligente combine technologie de pointe et design intuitif pour vous aider à atteindre vos objectifs de bien-être."
    }
  ],
  "presets": [
    {
      "name": "About Us"
    }
  ]
}
{% endschema %}
