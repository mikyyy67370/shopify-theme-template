<div class="trust-badges py-12" data-aos="fade-up">
  <div class="container mx-auto px-4">
    {% if section.settings.show_title %}
      <h2 class="text-2xl font-bold text-center mb-8">{{ section.settings.title }}</h2>
    {% endif %}
    
    <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
      {% for block in section.blocks %}
        <div class="trust-badge-item text-center p-4" data-aos="fade-up" data-aos-delay="{{ forloop.index | times: 100 }}">
          <div class="icon-container mb-4">
            {% case block.settings.icon %}
              {% when 'shipping' %}
                <svg class="w-12 h-12 mx-auto text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"/>
                </svg>
              {% when 'guarantee' %}
                <svg class="w-12 h-12 mx-auto text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                </svg>
              {% when 'security' %}
                <svg class="w-12 h-12 mx-auto text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/>
                </svg>
              {% when 'support' %}
                <svg class="w-12 h-12 mx-auto text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192l-3.536 3.536M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-5 0a4 4 0 11-8 0 4 4 0 018 0z"/>
                </svg>
            {% endcase %}
          </div>
          
          <h3 class="text-lg font-medium mb-2">{{ block.settings.title }}</h3>
          <p class="text-gray-600 text-sm">{{ block.settings.description }}</p>
        </div>
      {% endfor %}
    </div>
    
    {% if section.settings.show_payment_icons %}
      <div class="payment-icons mt-8 text-center" data-aos="fade-up">
        <p class="text-sm text-gray-500 mb-4">{{ section.settings.payment_icons_text }}</p>
        <div class="flex justify-center space-x-4">
          <img src="{{ 'payment-visa.svg' | asset_url }}" alt="Visa" class="h-8">
          <img src="{{ 'payment-mastercard.svg' | asset_url }}" alt="Mastercard" class="h-8">
          <img src="{{ 'payment-amex.svg' | asset_url }}" alt="American Express" class="h-8">
          <img src="{{ 'payment-paypal.svg' | asset_url }}" alt="PayPal" class="h-8">
          <img src="{{ 'payment-apple-pay.svg' | asset_url }}" alt="Apple Pay" class="h-8">
        </div>
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Trust Badges",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_title",
      "label": "Show section title",
      "default": true
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Why Choose Us"
    },
    {
      "type": "checkbox",
      "id": "show_payment_icons",
      "label": "Show payment icons",
      "default": true
    },
    {
      "type": "text",
      "id": "payment_icons_text",
      "label": "Payment icons text",
      "default": "Secure Payment Methods"
    }
  ],
  "blocks": [
    {
      "type": "trust_badge",
      "name": "Trust Badge",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            {
              "value": "shipping",
              "label": "Free Shipping"
            },
            {
              "value": "guarantee",
              "label": "Guarantee"
            },
            {
              "value": "security",
              "label": "Security"
            },
            {
              "value": "support",
              "label": "Support"
            }
          ],
          "default": "shipping"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Free Shipping"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Free shipping on all orders over $50"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Trust Badges",
      "blocks": [
        {
          "type": "trust_badge",
          "settings": {
            "icon": "shipping",
            "title": "Free Shipping",
            "description": "Free shipping on all orders over $50"
          }
        },
        {
          "type": "trust_badge",
          "settings": {
            "icon": "guarantee",
            "title": "Money-Back Guarantee",
            "description": "30-day money-back guarantee"
          }
        },
        {
          "type": "trust_badge",
          "settings": {
            "icon": "security",
            "title": "Secure Payment",
            "description": "Your data is always protected"
          }
        },
        {
          "type": "trust_badge",
          "settings": {
            "icon": "support",
            "title": "24/7 Support",
            "description": "Contact us anytime"
          }
        }
      ]
    }
  ]
}
{% endschema %}

<style>
.trust-badge-item {
  @apply bg-white rounded-lg shadow-sm hover:shadow-md transition-shadow;
}

.icon-container svg {
  @apply transform transition-transform;
}

.trust-badge-item:hover .icon-container svg {
  @apply scale-110;
}
</style>
