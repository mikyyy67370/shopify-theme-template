{% comment %}
  Hero Banner Section
  ------------------------------------------------------------------------------
  A full-width banner with image background, heading, text and call-to-action
{% endcomment %}

<div class="relative bg-gray-900">
  <div class="absolute inset-0">
    <img src="https://images.unsplash.com/photo-1576678927484-cc907957088c?auto=format&fit=crop&w=2000"
         alt="Smart Scale Banner"
         class="w-full h-full object-cover">
    <div class="absolute inset-0 bg-gray-900 opacity-50"></div>
  </div>

  <div class="relative max-w-7xl mx-auto py-24 px-4 sm:py-32 sm:px-6 lg:px-8">
    <h1 class="text-4xl font-extrabold tracking-tight text-white sm:text-5xl lg:text-6xl">
      Découvrez notre Balance Connectée
    </h1>
    <p class="mt-6 text-xl text-gray-300 max-w-3xl">
      Suivez votre santé avec précision grâce à notre balance intelligente. Synchronisation avec votre smartphone, mesures précises et design élégant.
    </p>
    <div class="mt-10">
      <a href="/collections/all"
         class="inline-block bg-white py-3 px-8 rounded-md text-base font-medium text-gray-900 hover:bg-gray-100">
        Acheter Maintenant
      </a>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Hero banner",
  "tag": "section",
  "class": "hero-banner-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Découvrez notre Balance Connectée"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Suivez votre santé avec précision grâce à notre balance intelligente.</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Acheter Maintenant"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "Hero banner",
      "settings": {
        "title": "Découvrez notre Balance Connectée",
        "text": "<p>Suivez votre santé avec précision grâce à notre balance intelligente.</p>",
        "button_label": "Acheter Maintenant"
      }
    }
  ]
}
{% endschema %}