{% comment %}
  Hero Section with Animations
  ------------------------------------------------------------------------------
  Modern hero section with animated text and background
{% endcomment %}

<div class="relative min-h-screen flex items-center" x-data="{ showText: false }" x-init="setTimeout(() => showText = true, 500)">
  <!-- Background Video/Image with Zoom Effect -->
  <div class="absolute inset-0 overflow-hidden">
    <img 
      src="https://images.unsplash.com/photo-1576678927484-cc907957088c?auto=format&fit=crop&w=2000"
      alt="Smart Scale Background"
      class="w-full h-full object-cover transform scale-105 animate-slow-zoom"
    >
    <div class="absolute inset-0 bg-gradient-to-r from-gray-900/80 to-gray-900/40"></div>
  </div>

  <!-- Content -->
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-32">
    <div class="max-w-3xl" x-cloak>
      <!-- Animated Title -->
      <h1 
        class="text-4xl md:text-6xl font-extrabold text-white mb-6 opacity-0 transform -translate-y-4"
        x-show="showText"
        x-transition:enter="transition ease-out duration-1000"
        x-transition:enter-start="opacity-0 transform -translate-y-4"
        x-transition:enter-end="opacity-100 transform translate-y-0"
      >
        {{ section.settings.title | default: "Transformez votre Routine Bien-être" }}
      </h1>

      <!-- Animated Subtitle -->
      <p 
        class="text-xl md:text-2xl text-gray-200 mb-8 opacity-0"
        x-show="showText"
        x-transition:enter="transition ease-out duration-1000 delay-500"
        x-transition:enter-start="opacity-0 transform -translate-y-4"
        x-transition:enter-end="opacity-100 transform translate-y-0"
      >
        {{ section.settings.subtitle | default: "Une balance connectée qui révolutionne votre suivi santé avec une précision inégalée et une expérience utilisateur exceptionnelle." }}
      </p>

      <!-- Animated Stats -->
      <div 
        class="grid grid-cols-3 gap-6 mb-12 opacity-0"
        x-show="showText"
        x-transition:enter="transition ease-out duration-1000 delay-1000"
        x-transition:enter-start="opacity-0 transform -translate-y-4"
        x-transition:enter-end="opacity-100 transform translate-y-0"
      >
        <div class="text-center">
          <div class="text-3xl font-bold text-white">99%</div>
          <div class="text-sm text-gray-300">Précision</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-white">30j</div>
          <div class="text-sm text-gray-300">D'essai gratuit</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-white">24/7</div>
          <div class="text-sm text-gray-300">Support client</div>
        </div>
      </div>

      <!-- Animated CTA Buttons -->
      <div 
        class="flex flex-col sm:flex-row gap-4 opacity-0"
        x-show="showText"
        x-transition:enter="transition ease-out duration-1000 delay-1500"
        x-transition:enter-start="opacity-0 transform -translate-y-4"
        x-transition:enter-end="opacity-100 transform translate-y-0"
      >
        <a 
          href="{{ section.settings.primary_button_link | default: '/products' }}"
          class="inline-flex justify-center items-center px-8 py-4 border border-transparent text-base font-medium rounded-md text-gray-900 bg-white hover:bg-gray-100 transform hover:scale-105 transition-all duration-300"
        >
          {{ section.settings.primary_button_text | default: "Découvrir nos produits" }}
        </a>
        <a 
          href="{{ section.settings.secondary_button_link | default: '/pages/about' }}"
          class="inline-flex justify-center items-center px-8 py-4 border-2 border-white text-base font-medium rounded-md text-white hover:bg-white/10 transform hover:scale-105 transition-all duration-300"
        >
          {{ section.settings.secondary_button_text | default: "En savoir plus" }}
        </a>
      </div>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div 
    class="absolute bottom-8 left-1/2 transform -translate-x-1/2 opacity-0"
    x-show="showText"
    x-transition:enter="transition ease-out duration-1000 delay-2000"
    x-transition:enter-start="opacity-0"
    x-transition:enter-end="opacity-100"
  >
    <div class="animate-bounce">
      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </div>
</div>

<style>
.animate-slow-zoom {
  animation: slow-zoom 20s ease-in-out infinite alternate;
}

@keyframes slow-zoom {
  from {
    transform: scale(1.05);
  }
  to {
    transform: scale(1.15);
  }
}

[x-cloak] {
  display: none !important;
}
</style>

{% schema %}
{
  "name": "Hero Animated",
  "tag": "section",
  "class": "hero-animated-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Transformez votre Routine Bien-être"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Une balance connectée qui révolutionne votre suivi santé avec une précision inégalée et une expérience utilisateur exceptionnelle."
    },
    {
      "type": "text",
      "id": "primary_button_text",
      "label": "Primary Button Text",
      "default": "Découvrir nos produits"
    },
    {
      "type": "url",
      "id": "primary_button_link",
      "label": "Primary Button Link"
    },
    {
      "type": "text",
      "id": "secondary_button_text",
      "label": "Secondary Button Text",
      "default": "En savoir plus"
    },
    {
      "type": "url",
      "id": "secondary_button_link",
      "label": "Secondary Button Link"
    }
  ],
  "presets": [
    {
      "name": "Hero Animated"
    }
  ]
}
{% endschema %}
