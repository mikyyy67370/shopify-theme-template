{% comment %}
  Key Features Section
  ------------------------------------------------------------------------------
  Showcase main product features with animations
{% endcomment %}

<div class="bg-gray-50 py-16 sm:py-24" x-data="{ activeFeature: 0 }">
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="text-center">
      <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
        {{ section.settings.title | default: "Fonctionnalités Principales" }}
      </h2>
      <p class="mx-auto mt-4 max-w-2xl text-lg text-gray-500">
        {{ section.settings.subtitle | default: "Découvrez ce qui rend notre balance intelligente unique" }}
      </p>
    </div>

    <div class="mt-16">
      <div class="grid grid-cols-1 gap-12 lg:grid-cols-3">
        <!-- Feature 1 -->
        <div 
          class="relative p-8 bg-white rounded-2xl shadow-sm hover:shadow-lg transition-shadow duration-300"
          x-data="{ hover: false }"
          @mouseenter="hover = true"
          @mouseleave="hover = false"
        >
          <div class="absolute -top-4 left-1/2 transform -translate-x-1/2">
            <div 
              class="w-8 h-8 bg-primary text-white rounded-full flex items-center justify-center text-lg font-semibold"
              :class="{ 'animate-bounce': hover }"
            >
              1
            </div>
          </div>
          
          <div class="text-center">
            <div class="h-12 w-12 mx-auto text-primary mb-4">
              <svg class="w-full h-full" fill="currentColor" viewBox="0 0 24 24">
                <path d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">Mesures Précises</h3>
            <p class="text-gray-500">Technologie de pointe pour des mesures ultra-précises de votre poids et de votre composition corporelle.</p>
          </div>
        </div>

        <!-- Feature 2 -->
        <div 
          class="relative p-8 bg-white rounded-2xl shadow-sm hover:shadow-lg transition-shadow duration-300"
          x-data="{ hover: false }"
          @mouseenter="hover = true"
          @mouseleave="hover = false"
        >
          <div class="absolute -top-4 left-1/2 transform -translate-x-1/2">
            <div 
              class="w-8 h-8 bg-primary text-white rounded-full flex items-center justify-center text-lg font-semibold"
              :class="{ 'animate-bounce': hover }"
            >
              2
            </div>
          </div>
          
          <div class="text-center">
            <div class="h-12 w-12 mx-auto text-primary mb-4">
              <svg class="w-full h-full" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">App Connectée</h3>
            <p class="text-gray-500">Synchronisation automatique avec votre smartphone pour un suivi en temps réel de vos progrès.</p>
          </div>
        </div>

        <!-- Feature 3 -->
        <div 
          class="relative p-8 bg-white rounded-2xl shadow-sm hover:shadow-lg transition-shadow duration-300"
          x-data="{ hover: false }"
          @mouseenter="hover = true"
          @mouseleave="hover = false"
        >
          <div class="absolute -top-4 left-1/2 transform -translate-x-1/2">
            <div 
              class="w-8 h-8 bg-primary text-white rounded-full flex items-center justify-center text-lg font-semibold"
              :class="{ 'animate-bounce': hover }"
            >
              3
            </div>
          </div>
          
          <div class="text-center">
            <div class="h-12 w-12 mx-auto text-primary mb-4">
              <svg class="w-full h-full" fill="currentColor" viewBox="0 0 24 24">
                <path d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 mb-2">Design Premium</h3>
            <p class="text-gray-500">Un design élégant et moderne qui s'intègre parfaitement à votre intérieur.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Key Features",
  "tag": "section",
  "class": "key-features-section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Fonctionnalités Principales"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Découvrez ce qui rend notre balance intelligente unique"
    }
  ],
  "presets": [
    {
      "name": "Key Features"
    }
  ]
}
{% endschema %}
